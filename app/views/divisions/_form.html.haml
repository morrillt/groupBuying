= form_for(@division) do |f|
  - if @division.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@division.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @division.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :source
    %br
    = f.text_field :source

  .actions
    = f.submit
