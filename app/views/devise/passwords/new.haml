%h2 Forgot your password?
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :validations => true, :html => {:class => 'styled'}) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    = f.text_field :email
  .field= f.submit "Send me reset password instructions", :class => 'button primary'
