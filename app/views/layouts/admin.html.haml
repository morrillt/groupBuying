!!!5
%html
  = render "shared/head"    
  %body
    .container
      .top-container
        #header
          .logo
            %a{:href=>"/admin"} Admin / Group Buying Analytics
          .account
            %a{:href=>"/admin/sites"} Sites
            %a{:href=>"/admin/deals"} Deals
            %a{:href=>"/admin/divisions"} Divisions
            %a{:href=>"/admin/snapshots"} Snapshots
            %a{:href=>"/admin/deals/export"} Deals CSV Export
      %div
        #main
          = yield
      .bottom-container
        #bottom

  = javascript_include_tag "thirdparty/jquery-1.5.1.min"
  = javascript_include_tag "thirdparty/ui/jquery.ui.core.min"
  = javascript_include_tag "thirdparty/ui/jquery.ui.widget.min"
  = javascript_include_tag "thirdparty/highcharts/highcharts"
  = javascript_include_tag "thirdparty/fancybox/jquery.fancybox-1.3.4.pack"
  = yield :javascripts
  :javascript  
    $("a#iframe").fancybox();
    $("a#lnk-new-user").fancybox({
      'transitionIn'	:	'elastic',
      'transitionOut'	:	'elastic',
      'speedIn'		:	600, 
      'speedOut'	:	200, 
      'overlayShow'	:	false
      });
  = javascript_include_tag "app"