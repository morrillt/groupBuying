%h1 Snapshots

= will_paginate(@snapshots)

%table
  %thead
    %th id
    %th deal_id
    %th sold_count
    %th site_id
    %th status
    %th created_at
    %th updated_at
    %th sold_since_last_snapshot_count

  %tbody
    - @snapshots.each do |snapshot|
      %tr
        %td=link_to(snapshot.id, admin_snapshot_path(snapshot))
        %td=snapshot.deal_id
        %td=snapshot.sold_count
        %td=snapshot.site_id
        %td=snapshot.status
        %td=snapshot.created_at
        %td=snapshot.updated_at
        %td=snapshot.sold_since_last_snapshot_count
      
= will_paginate(@snapshots)