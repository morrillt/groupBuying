.span-14
  %h1 Group Buying Dynamics
.span-10.last
  %form
    %input.text{:name => "", :type => "text", :value => "Username"}/
    %input.text{:name => "", :type => "text", :value => "Password"}/
.span-14 &nbsp;
.span-10.last.nav
  %a{:href => "#"} Login
  %a{:href => "#"} Signup
  %a{:href => "#"} Lost Password?
.span-18
  #chart
.span-6.last
  .rounded
    %h2= Deal.count
    %h5 deals analyzed to date
  .rounded
    %h3 Top Trending Deals
  .rounded
    %h5 Sign Up for Email Updates
    %input{:type => "submit", :value => "Sign Up"}/
.span-8.append-16.last
  %h2 See Detailed Report
  - @sites.each do |site|
    %p
      %a{:href => "/summary/#{site.name}"}= site.title
      (
      %a{:href => "/snapshots/#{site.name}"} snapshots
      )
      
:javascript
  var chart;
  $(document).ready(function() {
    chart = new Highcharts.Chart({
      chart: {
        renderTo: 'chart',
        defaultSeriesType: 'line',
        
        marginBottom: 25
      },
    title: {
      text: "Group Buying Dynamics"
    },
    yAxis: {
      title: {
        text: 'Value ($)'
      },
      plotLines: [{
        value: 0,
        width: 1,
        color: '#808080'
      }]
    },
    tooltip: {
      formatter: function() {
        return '<b>' + this.x + '</b>' + this.y + '$';
      }
    },
    legend: {
      layout: 'vertical',
      align: 'right',
      verticalAlign: 'top',
      x: -10,
      y: 100,
      borderWidth: 0
    },
    
    xAxis: {
      categories: #{@chart.labels.to_json},
      labels: {
        rotation: -45,
      },
    },
    series: [
      #{@chart.datasets.map{ |name, data| "{name: '#{name}', data: #{data.to_json}}"}.join(', ')}
    ]
    });
  
  });
